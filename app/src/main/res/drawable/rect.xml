<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="false">
            <shape android:shape="rectangle">
                <corners android:rectangle="500dp"/>
                <solid android:color="#453989"/>
                <stroke
                    android:color="#dfe7f7"
                    android:width="2dip" />
                <padding
                    android:bottom="4dp"
                    android:right="4dp"
                    android:top="4dp"
                    android:left="4dp"/>

            </shape>
        </item>

</selector>
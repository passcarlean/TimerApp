<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.pally">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".AlphabethActivity"
            android:label="@string/Category_alpha">
            <intent-filter>
            <action android:name="android.intent.action.AlphabethActivity" />
        </intent-filter>
        </activity>

        <activity android:name=".Things"
            android:label="@string/Category_things"/>
        <activity android:name=".Phrases"
            android:label="@string/Category_phrase"/>
        <activity android:name=".Numbers"
            android:label="@string/Category_numbers"/>
        <activity android:name=".Colors"
            android:label="@string/Category_color"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>